{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Relógio e Calendário",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}\\main.c",
                "${workspaceFolder}\\src\\calendario_relogio.c",
                "-I",
                "${workspaceFolder}\\include",
                "-o",
                "${workspaceFolder}\\output\\main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Executar Relógio e Calendário",
            "type": "shell",
            "command": "${workspaceFolder}\\output\\main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Compilar Relógio e Calendário"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}